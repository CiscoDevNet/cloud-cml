terraform {
  required_providers {
    vault = {
      source  = "hashicorp/vault"
      version = ">=4.2.0"
    }
  }
  required_version = ">= 1.1.0"
}

provider "vault" {
  skip_child_token = var.cfg.secret.vault.skip_child_token
}

module "vault" {
  source = "./vault"
  count  = var.cfg.secret.manager == "vault" ? 1 : 0
  cfg    = var.cfg
}
